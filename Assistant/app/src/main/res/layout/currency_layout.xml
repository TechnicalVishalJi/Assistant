<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_margin="20dp"
		android:elevation="10dp"
		android:padding="10dp"
		android:background="@drawable/wiki_info">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Medium Text"
			android:id="@+id/currency_layoutTextView1"
			android:textColor="@color/black"
			android:textSize="15sp"
			android:layout_marginBottom="5dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/currency_layoutTextView"
			android:text="Large Text"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:textSize="25sp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Medium Text"
			android:id="@+id/currency_layoutDate"
			android:textColor="@color/black"
			android:textSize="13sp"
			android:layout_marginTop="5dp"
			android:layout_marginBottom="10dp"/>

		<WebView
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:id="@+id/currency_layoutWebView"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:layout_marginTop="10dp">

				<EditText
					android:layout_width="100dp"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					android:ems="10"
					android:textCursorDrawable="@color/black"
					android:id="@+id/currencylayoutEditText1"
					android:background="@drawable/currency_edittext_bg"
					android:paddingLeft="5dp"/>

				<TextView
					android:layout_width="195dp"
					android:layout_height="wrap_content"
					android:text="Medium Text"
					android:id="@+id/currencylayoutTextView1"
					android:textColor="#000000"
					android:textSize="17sp"
					android:layout_marginLeft="6dp"/>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:layout_marginTop="10dp">

				<EditText
					android:layout_width="100dp"
					android:inputType="numberDecimal"
					android:layout_height="wrap_content"
					android:ems="10"
					android:textCursorDrawable="@color/black"
					android:id="@+id/currencylayoutEditText2"
					android:background="@drawable/currency_edittext_bg"
					android:paddingLeft="5dp"/>

				<TextView
					android:layout_width="195dp"
					android:layout_height="wrap_content"
					android:text="Medium Text"
					android:id="@+id/currencylayoutTextView2"
					android:textColor="#000000"
					android:textSize="17sp"
					android:layout_marginLeft="6dp"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

